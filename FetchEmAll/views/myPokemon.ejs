<%- include("partials/header.ejs") %>
    <%- include("partials/nav.ejs") %>
        <link rel="stylesheet" href="/css/pokedex.css">
        <link rel="stylesheet" href="/css/myPokemon.css">


        <section class="myPoke">
            <% myPokemon.forEach(poke => { %>
                <section class="myPoke__card">
                    <p class="myPoke__lvl"><span class="smoll">Lvl.</span><%= poke.level %></p>
                    <h2 class="myPoke__name"><%= poke.nickname %></h2>
                    <img class="myPoke__img"
                        src="<%= poke.front_image%>"
                        alt="<%= poke.name %> front image">
                    <p class="myPoke__hp"><%= poke.currentHp %>/<%= poke.hp %><span class="smoll">hp</span></p>
                    <section class="bar">
                        <section class="fill hp-fill"></section>
                    </section>
                </section>  
            <% }); %>
        </section>


        <%- include("partials/footer.ejs") %>