<%- include("partials/header.ejs") %>
    <%- include("partials/nav.ejs") %>
        <link rel="stylesheet" href="/css/pokedex.css">
        <link rel="stylesheet" href="/css/myPokemon.css">


        <section class="myPoke">
            <% myPokemon.forEach(poke=> { %>
                <form action="/myPokemon/change" method="POST">
                    <input type="hidden" name="pokeId" value="<%= poke.id %>">
                    <button type="submit" class="myPoke__card <%= poke.currentPokemon ? 'current' : '' %>"  <%= poke.currentPokemon ? 'disabled' : '' %>>
                        <p class="myPoke__lvl"><span class="smoll">Lvl.</span> <%= poke.level %></p>
                        <h2 class="myPoke__name"><%= poke.nickname %></h2>
                        <img class="myPoke__img" src="<%= poke.front_image %>" alt="<%= poke.name %> front image">
                        <p class="myPoke__hp">
                            <%= poke.currentHp %>/<%= poke.hp %><span class="smoll">hp</span>
                        </p>
                        <section class="bar">
                            <section class="fill" style="<%- getPercentAndColor(poke.currentHp, poke.hp) %>"></section>
                        </section>
                    </button>
                </form>
                <% }); %>
        </section>


        <%- include("partials/footer.ejs") %>