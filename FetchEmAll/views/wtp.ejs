<%- include("partials/header.ejs") %>
<%- include("partials/nav.ejs") %>

<link rel="stylesheet" href="/css/wtp.css">

<h1 class="wtp__title">Who's That Pokemon</h1>
<section class="wtp">
    <% if (answer.correct) { %>
           <img src="<%= poke.front_image %>" alt="<%=  %>" class="wtp__image" id="wtp__image" draggable="false" style="filter: brightness(100%);"> 
           <p><%= answer.response %></p>
    <% } else if(answer.response != "Correct! You guessed the right pokemon.") { %>
        <img src="<%= poke.front_image %>" alt="<%=  %>" class="wtp__image" id="wtp__image" draggable="false">
        <p class="answer_wrong"><%= answer.response %></p>
    <% } %>
    <section class="wtp_buttons">
        <form autocomplete="off" action="" method="post" class="wtp__form">
            <% if (answer.correct) { %>
                <div class="next_button">
                    <button type="button"><a href="/wtp">Next</a></button>
                    <!-- <a href="/wtp"><button type="button">Next</button></a> -->
                </div>
            <% } else { %>
                <div class="input__container" style="width:300px;">
                    <input id="input__field" type="text" name="guess" placeholder="Pokemon">
                </div>
                <div class="submit_button">
                    <button type="submit" id="reveal" name="post" value="post" class="submit">Submit</button>
                </div>
                <div class="skip_button">
                    <button type="button"><a href="/wtp">skip</a></button>
                    <!-- <a href="/wtp"><button type="button">Skip</button></a> -->
                </div>
            <% } %>
        </form>
        <div id="balloon-container" class="hidden">
            <div class="balloon-wrapper red">
                <div class="string"></div>
                <div class="balloon"></div>
            </div>
            <div class="balloon-wrapper blue">
                <div class="string"></div>
                <div class="balloon"></div>
            </div>
            <div class="balloon-wrapper yellow">
                <div class="string"></div>
                <div class="balloon"></div>
            </div>
        </div>
    </section>

</section>

<script src="/js/balloons.js"></script>
<%- include("partials/footer") %>


























