<section id="modal" class="modal">
    <section class="modal__backdrop">

    </section>
    <section class="modal__content">
        <h2>Wil je hem/haar een bijnaam geven?</h2>
        <% if(currentPage === "battle") { %>
            <form action="/battle/caught" class="form__nickname" method="post"></form>
                <input type="hidden" name="pokeId" value="<%= ai.poke %>">
                <input type="text" id="nickname" name="nickname" value="<%= ai.name %>">  
            </form>
        <% } else { %>
            <form action="/pokedex/nickname" class="form__nickname" method="post">
                <input type="hidden" name="starterId" value="<%= query.starterId %>">
                <input type="text" id="nickname" name="nickname">
            </form>
        <% } %>
    </section>
</section>